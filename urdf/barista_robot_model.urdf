    <origin xyz="0.12 0.0 0.0775" rpy="0 0 0"/>
    <parent link="base_link"/>
    <child link="laser_scanner"/>
  </joint>

  <link name="laser_scanner_frame">
  </link>

  <joint name="laser_scanner_frame_joint" type="fixed">
    <origin xyz="0 0 0.06" rpy="0 0 0"/>
    <parent link="laser_scanner"/>
    <child link="laser_scanner_frame"/>
  </joint>

  <!-- Gazebo Properties -->
  <gazebo reference="base_link">
    <material>Gazebo/Blue</material>
  </gazebo>

  <gazebo reference="left_wheel">
    <material>Gazebo/Black</material>
    <kp>1000000000000000000000000000.0</kp>
    <kd>1000000000000000000000000000.0</kd>
    <mu1>10.0</mu1>
    <mu2>10.0</mu2>
  </gazebo>

  <gazebo reference="right_wheel">
    <material>Gazebo/Black</material>
    <kp>1000000000000000000000000000.0</kp>
    <kd>1000000000000000000000000000.0</kd>
    <mu1>10.0</mu1>
    <mu2>10.0</mu2>
  </gazebo>

  <gazebo reference="front_yaw_link">
